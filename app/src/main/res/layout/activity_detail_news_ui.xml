<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@mipmap/title_red_bg">

        <ImageView
            android:id="@+id/detail_news_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@mipmap/back"/>

        <ImageView
            android:id="@+id/detail_news_share"
            android:layout_alignParentRight="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@mipmap/icon_share"/>

        <ImageView
            android:id="@+id/detail_news_textsize"
            android:layout_toLeftOf="@id/detail_news_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@mipmap/icon_textsize"/>

    </RelativeLayout>

    <!--WebView实现具体的新闻-->
    <WebView
        android:id="@+id/detail_news_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>